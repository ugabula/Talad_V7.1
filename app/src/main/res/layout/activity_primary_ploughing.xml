<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GetStartedActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backarrow"
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_blue_arrow_back"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="start|top"/>

    <TextView
        android:id="@+id/support"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backarrow"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Primary Ploughing"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/support"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Please provide details for your service booking."
        android:textAlignment="center"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@color/greyish"
        android:id="@+id/view4" />

    <TextView
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view4"
        android:layout_marginTop="5dp"
        android:text="Start Date"
        android:textSize="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/startdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view5" />

    <TextView
        android:id="@+id/starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view5"
        android:layout_marginTop="5dp"
        android:text="Start Time"
        android:textSize="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/starttime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view6" />

    <TextView
        android:id="@+id/setaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view6"
        android:layout_marginTop="5dp"
        android:text="Set Address"
        android:textSize="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/setaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view7" />

    <Button
        android:id="@+id/btnRai"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/btnChoose"
        android:layout_below="@+id/view7"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="37dp"
        android:background="@drawable/rect6"
        android:backgroundTint="@color/blue"
        android:text="Set How Many Rai on Ling"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:layout_below="@+id/btnRai"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect6"
        android:backgroundTint="@color/blue"
        android:text="Choose a Contractor"
        android:textColor="@color/white" />

</RelativeLayout>
