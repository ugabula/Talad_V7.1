<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GetStartedActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backarrow"
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="start|top"/>

    <TextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backarrow"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Select your availability"
        android:textAlignment="center"
        android:textColor="@color/talad_green"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/support"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@color/greyish"
        android:id="@+id/view4" />

    <TextView
        android:id="@+id/sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view4"
        android:layout_marginTop="5dp"
        android:text="Sunday"
        android:textSize="10sp"/>

    <CheckBox
        android:id="@+id/sunradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view4"
        android:shadowColor="@color/talad_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sunday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view5" />

    <TextView
        android:id="@+id/monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view5"
        android:layout_marginTop="5dp"
        android:text="Monday"
        android:textSize="10sp"/>

    <CheckBox
        android:id="@+id/monradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view5"
        android:shadowColor="@color/talad_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/monday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view6" />

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view6"
        android:layout_marginTop="5dp"
        android:text="Tuesday"
        android:textSize="10sp"/>

    <CheckBox
        android:id="@+id/tuesradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view6"
        android:shadowColor="@color/talad_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tuesday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view7" />

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view7"
        android:layout_marginTop="5dp"
        android:text="Wednesday"
        android:textSize="10sp"/>

    <CheckBox
        android:id="@+id/wedradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view7"
        android:shadowColor="@color/talad_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/wednesday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view8" />

    <TextView
        android:id="@+id/thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view8"
        android:layout_marginTop="5dp"
        android:text="Thursday"
        android:textSize="10sp"/>

    <CheckBox
        android:id="@+id/thurssradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view8"
        android:shadowColor="@color/talad_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/thursday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view9" />

    <TextView
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view9"
        android:layout_marginTop="5dp"
        android:text="Friday"
        android:textSize="10sp"/>

    <CheckBox
        android:id="@+id/friradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view9"
        android:shadowColor="@color/talad_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/friday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/greyish"
        android:id="@+id/view10" />


    <Button
        android:id="@+id/btnChoose"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:layout_below="@+id/view10"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/tuesday"
        android:background="@drawable/rect6"
        android:backgroundTint="@color/talad_green"
        android:text="Confirm"
        android:textColor="@color/white" />

</RelativeLayout>
