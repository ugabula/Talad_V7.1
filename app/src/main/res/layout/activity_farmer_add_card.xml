<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GetStartedActivity"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backarrow"
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_blue_arrow_back"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="start|top"/>

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add a Card"
        android:textColor="@color/blue"
        android:textSize="17sp" />

    <CheckBox
        android:id="@+id/creditcard"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/express"
        android:layout_marginTop="75dp"
        android:text="Visa"
        android:textColor="@color/black"
        tools:ignore="UnknownId"
        android:shadowColor="@color/blue"/>

    <CheckBox
        android:id="@+id/visa"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/creditcard"
        android:text="MasterCard"
        android:textColor="@color/black"/>

    <CheckBox
        android:id="@+id/paypal"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/visa"
        android:text="American Express"
        android:textColor="@color/black"
        android:shadowColor="@color/blue"/>

    <CheckBox
        android:id="@+id/mastercard"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/paypal"
        android:text="PayPal"
        android:textColor="@color/black"/>

    <CheckBox
        android:id="@+id/cash"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mastercard"
        android:text="Maestro"
        android:textColor="@color/black"
        android:shadowColor="@color/blue"/>

    <CheckBox
        android:id="@+id/westernUni"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cash"
        android:text="Western Union"
        android:textColor="@color/black"
        android:shadowColor="@color/blue"/>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cash"
        android:layout_gravity="bottom|center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Continue"
        android:background="@drawable/rect6"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/paypal"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/creditcard"
        android:layout_toEndOf="@+id/visa"
        app:srcCompat="@mipmap/mastercard" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/visa"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/creditcard"
        android:layout_toEndOf="@+id/creditcard"
        app:srcCompat="@drawable/visa" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mastercard"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/visa"
        android:layout_toEndOf="@+id/paypal"
        app:srcCompat="@drawable/amex" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cash"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView16"
        android:layout_toEndOf="@+id/mastercard"
        app:srcCompat="@drawable/paypal" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnChoose"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView25"
        android:layout_toEndOf="@+id/cash"
        app:srcCompat="@mipmap/maestro" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/westernUni"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView28"
        android:layout_toEndOf="@+id/cash"
        app:srcCompat="@drawable/western_union" />

</RelativeLayout>