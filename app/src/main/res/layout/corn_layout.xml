<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/corn" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView58"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/imageView58"
        android:text="Corn" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView58"
        android:layout_marginEnd="63dp"
        android:text="X" />

    <ImageView
        android:id="@+id/imageView59"
        android:layout_width="330dp"
        android:layout_height="186dp"
        android:layout_alignStart="@+id/imageView58"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/aerial_view" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView23"
        android:layout_below="@+id/imageView59"
        android:layout_marginTop="12dp"
        android:width="197dp"
        android:height="20dp"
        android:lineSpacingMultiplier="1.18"
        android:text="Primary Plowing" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView59"
        android:layout_below="@+id/imageView59"
        android:layout_marginTop="36dp"
        android:lineSpacingMultiplier="1.17"
        android:text="Turn over upper layer of soil bringing nutrients to the surface" />

    <Button
        android:id="@+id/btnReq"
        style="@style/cont"
        android:layout_width="76dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignEnd="@+id/imageView59"
        android:layout_gravity="bottom|center"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rect6"
        android:backgroundTint="@color/talad_green"
        android:text="BOOK"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</RelativeLayout>
