<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="336dp" android:height="98dp">
        <bitmap android:src="@drawable/map_corner"
            android:gravity="left"/>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#36000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>
        </shape>
    </item>
</layer-list>