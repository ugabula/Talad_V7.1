<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="195dp" android:height="58dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <solid android:color="#ffe9ecef" />
            <item android:name="android:shadowColor">#2b0000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>
</selector>