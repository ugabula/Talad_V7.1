<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="309dp" android:height="338dp">
        <shape android:shape="rectangle">
            <corners android:radius="13dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#38000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
        </shape>
    </item>
</layer-list>